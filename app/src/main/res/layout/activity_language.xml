<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

    <TextView
        android:id="@+id/tv_arabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اختر لغتك"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        ></TextView>
    <TextView
        android:id="@+id/tvenglish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_arabic"
        android:textSize="30dp"
        android:text="choose your language"
        android:gravity="center"
        android:onClick="arabic"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/arabic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@+id/tvenglish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30dp"
        android:text="عربية"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:onClick="arabic"
        android:background="@drawable/circle"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/english"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toTopOf="@id/arabic"
        android:textSize="30dp"
        android:text="English"
        android:gravity="center"
        android:onClick="english"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/circle"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/arabic"
        android:textSize="30dp"
        android:text="test"
        android:gravity="center"
        android:onClick="test"
        android:visibility="gone"
        />


</androidx.constraintlayout.widget.ConstraintLayout>